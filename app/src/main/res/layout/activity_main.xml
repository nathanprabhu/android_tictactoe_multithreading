<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.prabhunathan.cs478.p4.cs478_proj4.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Thread A"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Thread B"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/button"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView60"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/textView61"
        android:layout_above="@+id/textView60"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView6"
        android:layout_above="@+id/textView61"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="( X ) Random "
        android:id="@+id/textView7"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Random ( O )"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/textView3"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="vs"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true" />

        <TableRow
            android:id="@+id/Row1"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_above="@+id/Row2">

            <TextView
                android:id="@+id/cell11"
                android:layout_height="fill_parent"
                android:layout_gravity="start"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/back"
                android:text="T"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="115dp" />
            <TextView
                android:id="@+id/cell12"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/back"
                android:text="I"
                android:layout_width="115dp"
                android:textColor="@color/colorAccent" />
            <TextView
                android:id="@+id/cell13"
                android:layout_height="fill_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/back"
                android:text="C"
                android:layout_width="115dp"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>
    <TableRow
        android:id="@+id/Row2"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_above="@+id/Row3">

        <TextView
            android:id="@+id/cell21"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/back"
            android:text="T"
            android:textColor="@color/colorAccent"
            android:layout_width="115dp" />
        <TextView
            android:id="@+id/cell22"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/back"
            android:text="A"
            android:layout_width="115dp"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/cell23"
            android:layout_height="fill_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/back"
            android:text="C"
            android:layout_width="115dp"
            android:textColor="@color/colorAccent" />
    </TableRow>
    <TableRow
        android:id="@+id/Row3"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_above="@+id/textView6">

        <TextView
            android:id="@+id/cell31"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/back"
            android:text="T"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="115dp" />
        <TextView
            android:id="@+id/cell32"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/back"
            android:text="O"
            android:layout_width="115dp"
            android:textColor="@color/colorAccent" />
        <TextView
            android:id="@+id/cell33"
            android:layout_height="fill_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/back"
            android:text="E"
            android:layout_width="115dp"
            android:textColor="@color/colorPrimaryDark" />
    </TableRow>

</RelativeLayout>
